%h2
  Sign in
= render '/shared/clearance_flash'
- semantic_form_for :session, :url => session_path do |form|
  -form.inputs do
    = form.input :email
    = form.input :password, :as => :string
  -form.buttons do
    = form.commit_button :label => "Sign in", :disable_with => "Please wait..."
%ul
  %li
    = link_to "Sign up", new_user_path
  %li
    = link_to "Forgot password?", new_password_path
