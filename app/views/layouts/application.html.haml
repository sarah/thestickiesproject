!!! 5
%html
  %head
    %title The Stickies Project
    =stylesheet_link_tag "structure", "style", "formtastic", "formtastic_changes"
    =javascript_include_tag "vendor/jquery-1.3.2.min", "vendor/jquery.jeditable.mini", "vendor/jquery-ui-1.7.2.custom.min"
    =javascript_include_tag "tsp"
    =javascript_include_tag "tsp.helpers.ajax"
    =javascript_include_tag "tsp.builders"
    =javascript_include_tag "tsp.lookups"
    =javascript_include_tag "tsp.handlers"
    -if protect_against_forgery?
      =javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};"
  %body
    #header
      .content
        %h3
          %a{:href=>surfaces_url}The Stickies Project
        %ul.navigation
          %li=render "shared/user_nav"
          %li=link_to "about", "http://thestickiesproject.wordpress.com/about"
          %li=link_to "blog", "http://thestickiesproject.wordpress.com"
        =yield :surface_header
        =yield :new_sticky
    #surface
      =yield
    #footer
      .content
        coreyhaines & sarahggray

